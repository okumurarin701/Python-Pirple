# --- First Program ---
def GenreArtistDurationinseconds (Genre, Artist, DurationInSeconds):
      Output = {
        "Artist": "Lauv",
        "Genre": "Electropop",
        "DurationInSeconds": 328
      }
      return Output
first_program = GenreArtistDurationinseconds(Genre, Artist, DurationInSeconds)      

print(f"Artist: {first_program['Artist']}")
print(f"Genre: {first_program['Genre']}")
print(f"DurationInSeconds: {first_program['DurationInSeconds']}")


# --- Including Boolean Method ---

Artist = {
    "Troy": False,
    "JP": False,
    "Lauv": True
}
Genre = {
    "Dance": False,
    "Electropop": True,
    "Pop": False
}
DurationInSeconds = {
    126: False,
    328: True,
    294: False
}

def print_true_values(category_name, category_dict):
    # Correct indentation here
    print(f"{category_name}:")
    for item, is_true in category_dict.items():
        if is_true:
            print(f"  - {item}")
    print()  # blank line for readability 

print("=== Result from Boolean Method ===")
print_true_values("Artist", Artist)
print_true_values("Genre", Genre)
print_true_values("DurationInSeconds", DurationInSeconds)
